---
import GameLogic from "../../components/game/GameLogic";
import Layout from "../../layout/Layout.astro";
---

<Layout title="ค้นหาภาคที่ใช่ — Intania Open House 2023">
  <main class="">
    <section
      class="relative px-2 bg-[url('/assets/wallpaper.png')] bg-cover min-h-[110vh] h-full flex flex-col justify-center items-center gap-10"
    >
      <h1 class="text-white mx-6 text-center text-4xl font-body">
        มาค้นหาภาคที่ใช่สำหรับคุณกัน !
      </h1>
      <GameLogic client:load />
    </section>
  </main>
</Layout>

<script>
  // read from localStorage
  const name = localStorage.getItem("name");
  const major = localStorage.getItem("major");

  if (name && major) {
    // redirect to game page
    window.location.href = "/ticket";
  }
</script>
